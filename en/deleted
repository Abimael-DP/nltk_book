.. pylisting:: indent-tree

   def indent_tree(t, level=0, first=False, width=8):
       if not first:
           print ' '*(width+1)*level,
       try:
           print "%-*s" % (width, t.node),
           indent_tree(t[0], level+1, first=True)
           for child in t[1:]:
               indent_tree(child, level+1, first=False)
       except AttributeError:
           print t

