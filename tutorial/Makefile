##############################################
##  Automatically find tutorial reports.
REPORTS = $(dir $(wildcard */*.info))

##############################################
##  You shouldn't have to change anything below here.

DVI := $(REPORTS:/=.dvi)
PS := $(REPORTS:/=.ps)
PDF := $(REPORTS:/=.pdf)
CLEAN := $(REPORTS:/=.clean)
HTML := $(REPORTS:/=.html)
ALL := $(REPORTS:/=.all)

help: usage
usage:
	@echo "Usage:"
	@echo "    make all         -- Build HTML & PDF output"
	@echo "    make html        -- Build HTML output"
	@echo "    make pdf         -- Build PDF output"
	@echo "    make clean       -- Remove all built files"

all: $(ALL)
dvi: $(DVI)
ps: $(PS)
pdf: $(PDF)
clean: $(CLEAN)
html: $(HTML)

%.all: %
	$(MAKE) -C $< all

%.pdf: %
	$(MAKE) -C $< pdf

%.ps: %
	$(MAKE) -C $< ps

%.dvi: %
	$(MAKE) -C $< dvi

%.clean: %
	$(MAKE) -C $< clean

%.html: %
	$(MAKE) -C $< html
